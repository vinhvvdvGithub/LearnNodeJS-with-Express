extends ../layout/common
block content
    h1 Create user
    if errors 
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="Post", enctype="multipart/form-data")
        .form-group
            label(for="name") Name 
            input#name(type="text",name="name", class="form-control", value= values ? values.name : " " )
        .form-group 
            label(for="phone") Phone 
            input#phone(type="text",name="phone", class="form-control", value= values ? values.phone : " ")
        .form-group 
            label(for="avatar") Avatar 
            input#avatar.form-control-file(type="file", name="avatar")   
        button.btn.btn-primary Create