extends ../layout/common
block content
    h1 Login 
    
    if errors 
        each error in errors
            .alert.alert-danger= error
    form(action="/users/create", method="Post")
        .form-group
            label(for="Email") Email 
            input#name(type="text",name="Email", class="form-control", value= values ? values.Email : " " )
        .form-group 
            label(for="Password") Password 
            input#phone(type="text",name="Password", class="form-control", value= values ? values.Password : " ")

        button.btn.btn-primary Login